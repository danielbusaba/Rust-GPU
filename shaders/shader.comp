#version 450

layout(local_size_x = 8, local_size_y = 8) in;

layout(binding = 0, rgba8ui) restrict uniform uimage2D image;

void main()
{
    ivec2 index = ivec2(gl_GlobalInvocationID.xy);
    uvec4 pixel = imageLoad(image, index);
    uvec4 write = uvec4(pixel.rgb / uvec3(16), pixel.a);
    imageStore(image, index, write);
}
